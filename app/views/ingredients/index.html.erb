<p id="notice"><%= notice %></p>

<h1>Ingredients</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <th class="ingredientspace"><%= ingredient.name %></th>
        <td class="ingredientspace"><strong>Cost:</strong>$<%= ingredient.cost %></td>
        <td class="ingredientspace" class="ingredientalign"><%= link_to 'Show', ingredient %></td>
        <td class="ingredientspace" class="ingredientalign"><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td class="ingredientspace" class="ingredientalign"><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_ingredient_path %>
