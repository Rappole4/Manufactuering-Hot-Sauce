<p id="notice"><%= notice %></p>

<h1>Sauces</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Origin</th>
      <th>Ingredients</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sauces.each do |sauce| %>
      <tr>
        <td><%=image_tag sauce.image.url(:small)%></td>
        <td><%= sauce.name %></td>
        <td><%= sauce.description %></td>
        <td><%= sauce.origin %></td>
        <td><%= sauce.ingredients %></td>
        <td><%= link_to 'Show', sauce %></td>
        <td><%= link_to 'Edit', edit_sauce_path(sauce) %></td>
        <td><%= link_to 'Destroy', sauce, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

