<%= form_for(sauce) do |f| %>
  <% if sauce.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sauce.errors.count, "error") %> prohibited this sauce from being saved:</h2>

      <ul>
      <% sauce.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table id="ingredientList1">
  <%= f.text_field :user_id, value: current_user, class: "field" %>
    <tr>
      <td colspan="2" class="ingredientOrigin">
        <div class="newSauceField" class="field">
          <%= f.label :image %><br>
          <%= f.file_field :image %>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="2" class="ingredientOrigin">
        <div class="newSauceField" class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="2" class="ingredientOrigin">
        <div class="newSauceField" class="field">
          <%= f.label :description %><br>
          <%= f.text_area :description, cols:"25", rows:"10" %>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="2" class="ingredientOrigin">
        <div class="newSauceField" class="field">
          <%= f.label :origin_id %><br>
          <%= f.select :origin_id, @locations.map{|x| ["#{x.city}, #{x.state}", x.id]} %>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="2" class="ingredientOrigin">
        <div class="newSauceField" class="field">
          <%= f.label :ingredients %><br>
          <%= f.text_area :ingredients, cols:"40", rows:"10" %>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="2" class="ingredientOrigin">
        <div class="newSauceField" class="actions">
          <%= f.submit %>
        </div>
      </td>
    </tr>
</table>
<% end %>